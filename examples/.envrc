# .envrc Example (direnv configuration)
# This file is used by direnv to automatically load environment variables

# API Configuration
export API_KEY=envrc-api-key-12345
export API_SECRET=envrc-secret-value

# Database
export DATABASE_URL=postgres://user:password@localhost/mydb
export REDIS_URL=redis://localhost:6379

# Feature Flags
export ENABLE_DEBUG=true
export LOG_LEVEL=debug

# Cloud Services
export AWS_REGION=us-east-1
export AWS_ACCESS_KEY_ID=AKIAEXAMPLEKEY
export AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/EXAMPLEKEY

# Local Development
export LOCAL_DEV=true
export HOT_RELOAD=enabled

