{
  "name": "camouflage",
  "displayName": "Camouflage",
  "description": "Hide sensitive values in configuration files (.env, .sh, .json, .yaml, .properties, .toml)",
  "version": "1.1.2",
  "publisher": "zeybek",
  "author": {
    "name": "Ahmet Zeybek",
    "email": "me@zeybek.dev",
    "url": "https://zeybek.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zeybek/camouflage.git"
  },
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.96.0",
    "node": ">=22.0.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Visualization"
  ],
  "keywords": [
    "env",
    "environment",
    "dotenv",
    "secret",
    "hide",
    "mask",
    "camouflage",
    "sensitive",
    "security",
    "privacy",
    "screen sharing",
    "json",
    "yaml",
    "toml",
    "properties",
    "config",
    "configuration"
  ],
  "activationEvents": [
    "onLanguage:dotenv",
    "onLanguage:properties",
    "onLanguage:plaintext",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:yaml",
    "onLanguage:shellscript",
    "onLanguage:toml",
    "onLanguage:ini",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "camouflage.hide",
        "title": "Camouflage: Hide Environment Variables",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.reveal",
        "title": "Camouflage: Reveal Environment Variables",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.toggleValue",
        "title": "Camouflage: Toggle Selected Value",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.toggleSelective",
        "title": "Camouflage: Toggle Selective Hiding",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.addToExcludeList",
        "title": "Camouflage: Add to Exclude List",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.setStyleText",
        "title": "Camouflage: Set Style to Text",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.setStyleDotted",
        "title": "Camouflage: Set Style to Dotted",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.setStyleStars",
        "title": "Camouflage: Set Style to Stars",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.setStyleScramble",
        "title": "Camouflage: Set Style to Scramble",
        "icon": "assets/icon.png"
      },
      {
        "command": "camouflage.excludeFile",
        "title": "Camouflage: Exclude This File",
        "icon": "$(exclude)"
      },
      {
        "command": "camouflage.includeFile",
        "title": "Camouflage: Include This File",
        "icon": "$(add)"
      }
    ],
    "configuration": {
      "title": "Camouflage",
      "properties": {
        "camouflage.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable hiding of environment values",
          "category": "General"
        },
        "camouflage.autoHide": {
          "type": "boolean",
          "default": true,
          "description": "Automatically hide values when opening supported files",
          "category": "General"
        },
        "camouflage.files.patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".env*",
            "*.env",
            "*.sh",
            "*.json",
            "*.yaml",
            "*.yml",
            "*.properties",
            "*.ini",
            "*.conf",
            "*.toml"
          ],
          "description": "File patterns to apply hiding (e.g., .env, .env.local, config.json, etc.)",
          "category": "Files"
        },
        "camouflage.files.excludedFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of file paths to exclude from Camouflage (absolute or relative paths)",
          "category": "Files"
        },
        "camouflage.appearance.hiddenText": {
          "type": "string",
          "default": "************************",
          "description": "Text to display instead of the actual environment values",
          "category": "Appearance"
        },
        "camouflage.appearance.textColor": {
          "type": "string",
          "enum": [
            "auto",
            "#FFFFFF",
            "#000000",
            "#FF0000",
            "#00FF00",
            "#0000FF",
            "#FFFF00",
            "#00FFFF",
            "#FF00FF",
            "#808080",
            "#C0C0C0"
          ],
          "default": "auto",
          "description": "Color of the hidden text. Use 'auto' for theme color or a CSS color value",
          "category": "Appearance"
        },
        "camouflage.appearance.backgroundColor": {
          "type": "string",
          "enum": [
            "auto",
            "transparent",
            "#2F7FE5",
            "#FF0000",
            "#00FF00",
            "#0000FF",
            "#FFFF00",
            "#00FFFF",
            "#FF00FF",
            "#000000",
            "#FFFFFF"
          ],
          "default": "auto",
          "description": "Background color for hidden values. Use 'auto' for theme color or a CSS color value",
          "category": "Appearance"
        },
        "camouflage.appearance.style": {
          "type": "string",
          "enum": [
            "text",
            "dotted",
            "stars",
            "scramble"
          ],
          "default": "text",
          "description": "Style of hidden text",
          "category": "Appearance"
        },
        "camouflage.hover.showPreview": {
          "type": "boolean",
          "default": false,
          "description": "Show value preview on hover",
          "category": "Hover"
        },
        "camouflage.hover.message": {
          "type": "string",
          "default": "Environment value hidden by Camouflage extension",
          "description": "Custom message to show on hover",
          "category": "Hover"
        },
        "camouflage.selective.keyPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*KEY*",
            "*TOKEN*",
            "*SECRET*",
            "*PASSWORD*",
            "*PWD*",
            "*DB*",
            "*DATABASE*",
            "*PORT*",
            "*CONNECTION*",
            "*CREDENTIAL*",
            "*AUTH*",
            "*PRIVATE*"
          ],
          "description": "Patterns to match keys that should always be hidden (supports wildcards: *KEY*, KEY*, *KEY)",
          "category": "Selective Hiding"
        },
        "camouflage.selective.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable selective hiding (only hide keys matching patterns when enabled)",
          "category": "Selective Hiding"
        },
        "camouflage.selective.excludeKeys": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Keys that should never be hidden",
          "category": "Selective Hiding"
        },
        "camouflage.parsers.enabled": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "env",
              "json",
              "yaml",
              "properties",
              "toml"
            ]
          },
          "default": [
            "env",
            "json",
            "yaml",
            "properties",
            "toml"
          ],
          "description": "List of enabled parsers for different file formats",
          "category": "Parsers"
        },
        "camouflage.parsers.json.nestedDepth": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum depth for nested key parsing in JSON files",
          "category": "Parsers"
        },
        "camouflage.parsers.yaml.nestedDepth": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum depth for nested key parsing in YAML files",
          "category": "Parsers"
        }
      }
    },
    "keybindings": [
      {
        "command": "camouflage.hide",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus && resourceFilename =~ /.*(env|json|ya?ml|properties|ini|conf|toml|sh).*/"
      },
      {
        "command": "camouflage.reveal",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && resourceFilename =~ /.*(env|json|ya?ml|properties|ini|conf|toml|sh).*/"
      },
      {
        "command": "camouflage.toggleValue",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus && resourceFilename =~ /.*(env|json|ya?ml|properties|ini|conf|toml|sh).*/"
      },
      {
        "command": "camouflage.toggleSelective",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus && resourceFilename =~ /.*(env|json|ya?ml|properties|ini|conf|toml|sh).*/"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceFilename =~ /.*(env|json|ya?ml|properties|ini|conf|toml|sh).*/",
          "submenu": "camouflage.mainMenu",
          "group": "camouflage"
        }
      ],
      "camouflage.mainMenu": [
        {
          "when": "config.camouflage.enabled == false",
          "command": "camouflage.hide",
          "group": "1_toggle@1"
        },
        {
          "when": "config.camouflage.enabled == true",
          "command": "camouflage.reveal",
          "group": "1_toggle@1"
        },
        {
          "command": "camouflage.toggleValue",
          "group": "2_selection@1"
        },
        {
          "command": "camouflage.addToExcludeList",
          "group": "2_selection@2"
        },
        {
          "command": "camouflage.toggleSelective",
          "group": "3_mode@1"
        },
        {
          "command": "camouflage.excludeFile",
          "group": "4_file@1"
        },
        {
          "command": "camouflage.includeFile",
          "group": "4_file@2"
        },
        {
          "submenu": "camouflage.styleSubMenu",
          "group": "5_style@1"
        }
      ],
      "editor/title": [
        {
          "when": "resourceFilename =~ /.*(env|json|ya?ml|properties|ini|conf|toml|sh).*/ && config.camouflage.enabled == false",
          "command": "camouflage.hide",
          "group": "navigation"
        },
        {
          "when": "resourceFilename =~ /.*(env|json|ya?ml|properties|ini|conf|toml|sh).*/ && config.camouflage.enabled == true",
          "command": "camouflage.reveal",
          "group": "navigation"
        }
      ],
      "camouflage.styleSubMenu": [
        {
          "command": "camouflage.setStyleText",
          "group": "style@1"
        },
        {
          "command": "camouflage.setStyleDotted",
          "group": "style@2"
        },
        {
          "command": "camouflage.setStyleStars",
          "group": "style@3"
        },
        {
          "command": "camouflage.setStyleScramble",
          "group": "style@4"
        }
      ]
    },
    "submenus": [
      {
        "id": "camouflage.mainMenu",
        "label": "Camouflage",
        "icon": "$(eye-closed)"
      },
      {
        "id": "camouflage.styleSubMenu",
        "label": "Change Style"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "commitlint": "commitlint --edit",
    "semantic-release": "semantic-release",
    "package": "vsce package",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@jest/globals": "^30.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "22.15.32",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
